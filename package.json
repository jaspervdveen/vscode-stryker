{
  "name": "stryker-mutator",
  "displayName": "Stryker Mutator",
  "description": "Test your tests with mutation testing.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.86.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/src/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "stryker-mutator.instrument",
        "title": "Stryker: Instrument workspace"
      }
    ],
    "configuration": [
      {
        "title": "Stryker Mutator",
        "properties": {
          "stryker-mutator.mutationServerExecutablePath": {
            "type": "string",
            "default": "./node_modules/.bin/stryker-mutator/stryker-server",
            "description": "The path to the mutation server executable."
          },
          "stryker-mutator.mutationServerPort": {
            "type": "number",
            "default": 0,
            "description": "The port of the mutation WebSocket server. 0 means a random port.",
            "minimum": 0,
            "maximum": 65535
          }
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test",
    "stryker": "xvfb-run -a stryker run"
  },
  "devDependencies": {
    "@stryker-mutator/mocha-runner": "^8.2.6",
    "@stryker-mutator/typescript-checker": "^8.2.6",
    "@types/chai-as-promised": "^7.1.8",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/sinon-chai": "^3.2.12",
    "@types/uuid": "^9.0.8",
    "@types/vscode": "^1.86.0",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.9",
    "chai": "^4.4.1",
    "chai-as-promised": "^7.1.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-unicorn": "^52.0.0",
    "mocha": "^10.4.0",
    "prettier": "^3.2.5",
    "sinon": "^17.0.1",
    "sinon-chai": "^3.7.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "json-rpc-2.0": "^1.7.0",
    "minimatch": "^9.0.4",
    "mutation-testing-report-schema": "^3.0.2",
    "rxjs": "^7.8.1",
    "uuid": "^9.0.1",
    "ws": "^8.16.0"
  }
}
