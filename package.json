{
  "name": "stryker-mutator",
  "displayName": "Stryker Mutator",
  "publisher": "stryker-mutator",
  "description": "Test your tests with Stryker mutation testing.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.86.0"
  },
  "license": "SEE LICENSE IN LICENSE.txt",
  "categories": [
    "Testing"
  ],
  "keywords": [
    "stryker",
    "mutator",
    "strykerjs",
    "mutation",
    "mutation testing",
    "test",
    "testing",
    "stryker mutator",
    "stryker-mutator"
  ],
  "icon": "images/icon.png",
  "qna": false,
  "activationEvents": [
    "workspaceContains:**/*stryker.conf*.{json,js,mjs,cjs}"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/jaspervdveen/vscode-stryker.git"
  },
  "bugs": {
    "url": "https://github.com/jaspervdveen/vscode-stryker/issues"
  },
  "main": "./dist/extension",
  "contributes": {
    "configuration": [
      {
        "title": "Stryker Mutator",
        "properties": {
          "stryker-mutator.mutationServerExecutablePathOverwrite": {
            "type": "string",
            "default": null,
            "description": "Overwrite the filesystem path to the mutation server executable. By default the extension will look for StrykerJS' mutation server in your project's `node_modules/.bin` folder.",
            "scope": "resource"
          },
          "stryker-mutator.mutationServerPort": {
            "type": "number",
            "description": "The port of the mutation WebSocket server. 0 means a random port.",
            "minimum": 0,
            "maximum": 65535,
            "scope": "resource"
          },
          "stryker-mutator.mutationServerTimeout": {
            "type": "number",
            "description": "The timeout in milliseconds for the mutation server to start.",
            "minimum": 0,
            "default": 60000,
            "scope": "machine"
          }
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src test --ext ts",
    "test": "vscode-test",
    "stryker": "xvfb-run -a stryker run"
  },
  "devDependencies": {
    "@stryker-mutator/mocha-runner": "^8.2.6",
    "@stryker-mutator/typescript-checker": "^8.2.6",
    "@types/chai-as-promised": "^7.1.8",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/sinon-chai": "^3.2.12",
    "@types/uuid": "^9.0.8",
    "@types/vscode": "^1.86.0",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.9",
    "@vscode/vsce": "^2.26.1",
    "chai": "^4.4.1",
    "chai-as-promised": "^7.1.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-unicorn": "^52.0.0",
    "mocha": "^10.4.0",
    "prettier": "^3.2.5",
    "sinon": "^17.0.1",
    "sinon-chai": "^3.7.0",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3",
    "webpack": "^5.91.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "json-rpc-2.0": "^1.7.0",
    "minimatch": "^9.0.4",
    "mutation-testing-report-schema": "^3.0.2",
    "rxjs": "^7.8.1",
    "uuid": "^9.0.1",
    "ws": "^8.16.0"
  }
}
